datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}


// Quick overview of how to use this schema.prisma file
// Each model represents a different table in the database
// Each row represents a different column in the database
// Each row is set up as COLUMN_NAME COLUMN_TYPE ADDITIONAL OPTIONS

// ADDITIONAL MODEL OPTIONS
// @@map -- allows you to change the table name. Use snake case!

// ADDITIONAL OPTIONS
// @id -- this is the primary key for this table
// @unique -- this is a unique constraint
// @default() -- set a default value for this column
// @updatedAt -- this will update to a new timestamp every time you update this row
// @map -- This allows you to map to a more user-friendly column name. I highly recommend using snake case!



model Admin {
  id String @id @default(cuid())
  email String @unique
  password String
  lastLogin DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  @@map("users")
}


